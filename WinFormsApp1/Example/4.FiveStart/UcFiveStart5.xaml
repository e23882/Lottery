<UserControl x:Class="WpfAppTest.UcFiveStart5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppTest" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid x:Name="gdContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="5">
            <TextBlock Text="黏貼大底號碼，號碼之間可以是逗號、空格、分號或回車。空白默認為全部號碼(10萬注)做底。" DockPanel.Dock="Left"></TextBlock>
            <Button x:Name="btnImport" Content="匯入" Click="btn_Click" DockPanel.Dock="Right" HorizontalAlignment="Right"></Button>
            <Button x:Name="btnClear" Content="清除" Click="btn_Click" DockPanel.Dock="Right" HorizontalAlignment="Right"></Button>
        </DockPanel>
        <TextBox x:Name="teNumber" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5">
            
        </TextBox>
    </Grid>
</UserControl>
