<UserControl x:Class="WinFormsApp1.UcWaterWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinFormsApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="600" Width="1100" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Margin="3" x:Name="lbType" Grid.Column="0" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="lbType_SelectionChanged" />
        <DockPanel Grid.Column="1" x:Name="dpContent" />
    </Grid>
</UserControl>
